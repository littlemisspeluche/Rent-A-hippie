<div class="container">
  <div class="purple-background">
    <div class="row">
      <p class="title">Task Description</p>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <ul class="list-description">
          <div class="list-info">
            <li> I`m searching for someone who can ...</li>
            <%=  @job.description %>
          </div>
          <div class="list-info">
            <li>Im in...</li>
            <%= @job.location %><i class="fas fa-map-marker-alt"></i>
          </div>
          <div class="list-info">
            <li>I'm willing to pay... </li>
            <%= @job.cost %> $ <i class="fas fa-money-check-alt"></i>
          </div>
          <div class="list-info">
            <li>In the next...</li>
            <%= @job.time %> Minutes <i class="far fa-clock"></i>
          </div>
        </ul>

        <% if policy(@job).showing? %>
        <button class="btn-orange">
          <%= link_to "Book this job", job_bookings_path(@job), :method => :post %>
          <% end  %>
        </button>
      </div>
      <div class="col-xs-12 col-sm-6 map">
        <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      <div class="links">
        <ul>
          <li class="btn-orange"><%= link_to "Back", jobs_path(@job.location) %></li>
          <% if policy(@job).edit? %>
          <li class="btn-orange">
            <%= link_to "Edit Job", edit_job_path(params[:id])%>
            <% end %></li>
            <% if policy(@job).destroy? %>
          <li class="btn-orange">
          <%= link_to "Delete Job", job_path(), :method =>:delete%>
          <% end  %> </li>
        </ul>
      </div>
    </div>
  </div>
</div>


</div>
